<div class="bg-white">
  <div class="max-w-7xl mx-auto py-16 px-4 sm:py-24 sm:px-6 lg:px-8">
    <div class="text-center">
      <h1 class="text-4xl font-extrabold tracking-tight text-gray-900 sm:text-5xl md:text-6xl">
        <span class="block">Bienvenido a</span>
        <span class="block text-blue-600">Pauloscode</span>
      </h1>
      <p class="mt-3 max-w-md mx-auto text-base text-gray-500 sm:text-lg md:mt-5 md:text-xl md:max-w-3xl">
        Un blog sobre desarrollo web, Ruby on Rails y otras tecnologías.
      </p>
    </div>
  </div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <% if @blogs.any? %>
      <div class="mt-12 grid gap-5 max-w-lg mx-auto lg:grid-cols-3 lg:max-w-none">
        <% @blogs.each do |blog| %>
          <div class="flex flex-col rounded-lg shadow-lg overflow-hidden">
            <% if blog.image %>
              <div class="flex-shrink-0">
                <%= image_tag blog.image, class: "h-48 w-full object-cover", alt: blog.title %>
              </div>
            <% end %>
            <div class="flex-1 bg-white p-6 flex flex-col justify-between">
              <div class="flex-1">
                <a href="<%= blog_path(blog.slug) %>" class="block mt-2">
                  <p class="text-xl font-semibold text-gray-900"><%= blog.title %></p>
                  <p class="mt-3 text-base text-gray-500"><%= blog.summary %></p>
                </a>
              </div>
              <div class="mt-6 flex items-center">
                <div class="flex-shrink-0">
                  <div class="flex space-x-1 text-sm text-gray-500">
                    <time datetime="<%= blog.created_at.strftime('%Y-%m-%d') %>">
                      <%= blog.created_at.strftime('%d %b, %Y') %>
                    </time>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <div class="mt-12 text-center">
        <%= link_to "Ver todos los blogs", blogs_path, class: "inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
      </div>
    <% else %>
      <div class="text-center mt-12">
        <p class="text-gray-500">No hay blogs publicados aún.</p>
      </div>
    <% end %>
  </div>
</div>