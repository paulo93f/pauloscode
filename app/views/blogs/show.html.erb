<article class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
  <div class="flex justify-between items-center mb-8">
    <div>
      <h1 class="text-3xl font-extrabold text-gray-900 sm:text-4xl"><%= @blog.title %></h1>
      <div class="mt-3 text-gray-500">
        <time datetime="<%= @blog.created_at.strftime('%Y-%m-%d') %>">
          <%= @blog.created_at.strftime('%d de %B, %Y') %>
        </time>
        <span class="mx-1">&middot;</span>
        <span>Lectura de <%= (@blog.content.length / 1000.0).ceil %> min</span>
      </div>
    </div>

